{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": "src",
    "paths": {
      "@prisma/*": ["../prisma/generated/prisma/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "prisma.config.ts", "prisma"]
}
